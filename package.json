{
  "name": "next-update",
  "description": "Tests if module's dependencies can be updated to the newer version without breaking the tests",
  "version": "1.0.0",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bin": {
    "next-update": "./bin/next-update.js"
  },
  "bugs": {
    "url": "https://github.com/bahmutov/next-update/issues"
  },
  "config": {
    "pre-git": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": [
        "npm run build",
        "npm test"
      ],
      "pre-push": [
        "npm run size"
      ],
      "post-commit": [
        "npm version"
      ],
      "post-merge": []
    }
  },
  "contributors": [],
  "dependencies": {
    "changed-log": "0.7.3",
    "check-more-types": "2.1.1",
    "check-types": "1.4.0",
    "cli-color": "1.1.0",
    "console.json": "0.2.1",
    "console.table": "0.4.0",
    "deps-ok": "1.0.3",
    "easy-table": "0.3.0",
    "is-online": "5.0.0",
    "lazy-ass": "0.6.0",
    "lodash": "3.10.1",
    "npm-utils": "0.1.6",
    "optimist": "0.6.1",
    "q": "2.0.3",
    "quote": "0.4.0",
    "request": "2.65.0",
    "semver": "5.0.3",
    "update-notifier": "0.5.0"
  },
  "devDependencies": {
    "coveralls": "2.11.4",
    "git-issues": "1.2.0",
    "grunt": "0.4.5",
    "grunt-bump": "0.6.0",
    "grunt-cli": "0.1.13",
    "grunt-complexity": "0.3.0",
    "grunt-contrib-jshint": "0.11.3",
    "grunt-deps-ok": "0.8.0",
    "grunt-help": "0.5.0",
    "grunt-jshint-solid": "0.1.1",
    "grunt-jsonlint": "1.0.5",
    "grunt-lineending": "0.2.4",
    "grunt-nice-package": "0.9.4",
    "grunt-readme": "0.4.5",
    "gt": "0.8.49",
    "jshint-stylish": "2.0.1",
    "matchdep": "1.0.0",
    "mockery": "1.4.0",
    "pre-git": "1.4.0",
    "publish": "0.5.0",
    "semantic-release": "4.3.5",
    "time-grunt": "1.2.1"
  },
  "engines": {
    "node": ">= 0.8.0"
  },
  "files": [
    "bin",
    "index.js",
    "src",
    "!src/test"
  ],
  "homepage": "https://github.com/bahmutov/next-update",
  "keywords": [
    "javascript",
    "node",
    "npm",
    "testing",
    "update",
    "version"
  ],
  "license": "MIT",
  "main": "index.js",
  "next-update-stats": "http://next-update.herokuapp.com",
  "preferGlobal": true,
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/next-update.git"
  },
  "scripts": {
    "2npm": "publish",
    "build": "grunt",
    "commit": "git-issues && commit-wizard",
    "coveralls": "cat cover/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "dont-break": "dont-break",
    "e2e": "gt test/*.coffee --output",
    "issues": "git-issues",
    "limited": "gt --filter 'allow major' --output src/test/*.coffee",
    "self-update": "node bin/next-update.js -k true",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run build && npm run unit && npm run e2e",
    "unit": "gt src/test/*.js src/test/*.coffee --output"
  }
}
